pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'willisrunner/fiveg_app'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ngoamenye/5G-mm-waves-throughput-prediction.git'
            }
        }
        // stage('Install Dependencies') {
        //     steps {
        //         script {
        //             sh 'pip install -r requirements.txt'
        //         }
        //     }
        // }
        stage('CI Checks') {
            steps {
                script {
                    bat '"C:\\Program Files\\Git\\bin\\bash.exe" ./scripts/ci_check.sh'
                }
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', '2353df0d-c9ae-4a8d-9b5b-931e9659d601') {
                        sh 'docker build -t ${DOCKER_IMAGE}:latest .'
                        sh 'docker tag ${DOCKER_IMAGE}:latest ${DOCKER_IMAGE}:${BUILD_NUMBER}'
                        sh 'docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}'
                    }
                }
            }
        }
        stage('MLflow Logging') {
            steps {
                script {
                    sh 'python train_tf_model.py'  // Ensure the file exists and path is correct
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'docker-compose up -d'  // Ensure docker-compose.yml is available and valid
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
